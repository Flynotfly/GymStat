upstream uwsgi_app {
	server unix:/code/gymstat/uwsgi_app.sock;
}

server {
	listen 80;
	listen 443 ssl;
	ssl_certificate /code/gymstat/ssl/gymstat.crt;
	ssl_certificate_key /code/gymstat/ssl/gymstat.key;
	server_name www.mysite.example mysite.example;
	error_log stderr warn;
	access_log /dev/stdout main;
	
	location / {
		include /etc/nginx/uwsgi_params;
		uwsgi_pass uwsgi_app;
	}
	
	location /static/ {
		alias /code/gymstat/static/;
	}
	
	location /media/ {
		alias /code/gymstat/media/;
	}
}